<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Login – Gestão de Acessos</title>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <!-- Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <style>
    /* --------  RESET  -------- */
    *{box-sizing:border-box;margin:0;padding:0}

    /* --------  BASE  -------- */
    body{
      display:flex;justify-content:center;align-items:center;
      min-height:100vh;
      background:#1b1f26;
      font-family:"Segoe UI","Roboto",sans-serif;
      color:#e1e4e8;
      padding:1rem
    }
    .card{
      background:#252a36;
      padding:2.5rem 2.25rem;
      border-radius:8px;
      width:100%;
      max-width:420px;
      box-shadow:0 4px 20px rgba(0,0,0,.55);
      animation:fadeIn .6s ease-out;
    }
    @keyframes fadeIn{from{opacity:0;transform:scale(.95)}to{opacity:1}}

    .logo{
      display:block;
      margin:0 auto 1rem;
      max-width:140px;
      filter:drop-shadow(0 0 4px #00a1f6);
    }
    h2{
      text-align:center;
      color:#00a1f6;
      margin-bottom:2rem;
      font-weight:600;
      letter-spacing:.3px;
    }

    /* --------  FORM  -------- */
    .field{
      position:relative;
      margin-bottom:1.25rem;
    }
    .field .material-icons{
      position:absolute;
      left:.9rem;top:50%;
      transform:translateY(-50%);
      color:#00a1f6;
      pointer-events:none;
    }
    .field input{
      width:100%;
      padding:.65rem 1rem .65rem 2.75rem;
      background:#1e232b;
      border:2px solid transparent;
      border-radius:4px;
      color:#e1e4e8;
      font-size:1rem;
      transition:border .2s,box-shadow .2s;
    }
    .field input:focus{
      outline:none;
      border-color:#00a1f6;
      box-shadow:0 0 0 2px rgba(0,161,246,.3);
    }

    /* toggle olho */
    .toggle-pass{
      position:absolute;
      right:.8rem;top:50%;
      transform:translateY(-50%);
      cursor:pointer;
      color:#8d9199;
    }

    /* --------  BUTTON  -------- */
    .btn{
      width:100%;
      padding:.75rem 1rem;
      background:#00a1f6;
      border:none;
      border-radius:4px;
      color:#fff;
      font-size:1rem;
      font-weight:600;
      cursor:pointer;
      display:flex;align-items:center;justify-content:center;
      gap:.4rem;
      transition:background .2s;
    }
    .btn:hover{background:#007bbf}
    .btn:disabled{opacity:.6;cursor:not-allowed}

    /* --------  FEEDBACK  -------- */
    .error{
      background:#dc3545;
      color:#fff;
      border-radius:4px;
      padding:.5rem .75rem;
      font-size:.9rem;
      margin-top:1rem;
      display:none;
    }
  </style>
</head>
<body>
  <form class="card" id="loginForm">
    <img src="../public/logo-nelogica.svg" class="logo" alt="Nelogica Logo">
    <h2>Gestão de Acessos</h2>

    <!-- usuário -->
    <div class="field">
      <span class="material-icons">person</span>
      <input id="user" name="username" autocomplete="username" placeholder="Usuário" required>
    </div>

    <!-- senha -->
    <div class="field">
      <span class="material-icons"></span>
      <input id="pass" type="password" name="password" autocomplete="current-password" placeholder="Senha" required>
      <span class="material-icons toggle-pass" onclick="togglePass()">visibility</span>
    </div>

    <!-- botão -->
    <button class="btn" type="submit" id="btnLogin">
      <span class="material-icons">login</span> Entrar
    </button>

    <div class="error" id="errBox">Usuário ou senha inválidos.</div>
  </form>

  <script>
    // --- mostrar/ocultar senha
    function togglePass(){
      const p=document.getElementById('pass');
      p.type = p.type==='password' ? 'text':'password';
    }

    // --- submit
    const form=document.getElementById('loginForm');
    const btn =document.getElementById('btnLogin');
    const err =document.getElementById('errBox');

    form.addEventListener('submit', async e=>{
      e.preventDefault();
      err.style.display='none';
      btn.disabled=true;

      const payload={
        username: form.user.value.trim(),
        password: form.pass.value
      };

      try{
        const r=await fetch('/login',{
          method:'POST',
          headers:{'Content-Type':'application/json'},
          body:JSON.stringify(payload)
        });
        if(r.ok){
          location.replace('/usuarios');   // sucesso
        }else{
          err.style.display='block';
        }
      }catch(_){
        err.style.display='block';
      }finally{
        btn.disabled=false;
      }
    });
  </script>
</body>
</html>
