{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "src/views/**/*", "outDir": "dist/views" },
      { "include": "public/**/*",   "outDir": "dist/public" },
      { "include": "src/data/**/*", "outDir": "dist/data"   }
    ],
    "watchAssets": true
  }
}
